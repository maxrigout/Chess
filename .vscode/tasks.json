{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build the project",
            "command": "/usr/bin/clang++",
            "args": [
                "-Wall",
                "-std=c++17",
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "-Ideps/include",
                "-Isrc",
                "${workspaceFolder}/src/*.cpp",
                "${workspaceFolder}/src/Chess/*.cpp",
                "${workspaceFolder}/src/Chess/Pieces/*.cpp",
                "${workspaceFolder}/src/Chess/Players/*.cpp",
                "${workspaceFolder}/src/Core/*.cpp",
                "${workspaceFolder}/src/Renderer2D/SDL/*.cpp",
                "-o",
                "${workspaceFolder}/out",
                "-F/Library/Frameworks",
                "-framework",
                "SDL2",
                "-framework",
                "SDL2_ttf",
                "-framework",
                "SDL2_image"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: /usr/bin/clang++"
        },
        {
            "type": "shell",
            "label": "Run Tests",
            "command": "./test",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": ["compile test"],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "detail": "runs tests in the tests folder."
        },
        {
            "type": "shell",
            "label": "compile test",
            "command": "/usr/bin/clang++",
            "args": [
                "-Wall",
                "-std=c++17",
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "-Ideps/include",
                "-Isrc",
                "-Itests",
                "${workspaceFolder}/tests/*.cpp",
                "-o",
                "${workspaceFolder}/test",
                "-F/Library/Frameworks",
                "-framework",
                "SDL2",
                "-framework",
                "SDL2_ttf",
                "-framework",
                "SDL2_image"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "detail": "compiler: /usr/bin/clang++"
        }
    ]
}